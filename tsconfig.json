{
  "compilerOptions": {
    "target": "ES5",
    "jsx": "react",
    "jsxFactory": "h",

    "module": "ESNext",
    "moduleResolution": "node",

    "composite": true,
    "declaration": true,
    "rootDir": "./",
    "incremental": true,

    "baseUrl": "./",
    "outDir": "tmp/",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "downlevelIteration": true,
    "importHelpers": true,
    "sourceMap": true,

    "lib": ["ES2019.Array", "DOM"],

    "paths": {
      "@src": [ "src" ],
      "@src/*": [ "src/*" ],
      "@l10n": [ "src/l10n" ],
      "@l10n/*": [ "src/l10n/*" ],
      "@modules": [ "src/modules" ],
      "@modules/*": [ "src/modules/*" ],
      "@shared/*": [ "src/shared/*" ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
